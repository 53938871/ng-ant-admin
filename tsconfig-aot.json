{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": "src/",
    "paths": {
      "@components": [
        "temp_app/components"
      ],
      "@components/*": [
        "temp_app/components/*"
      ],
      "@core": [
        "temp_app/core/"
      ],
      "@core/*": [
        "temp_app/core/*"
      ]
    }
  },
  "files": [
    "src/temp_app/app.module.ts",
    "src/main-aot.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "genDir": "dist"
  }
}
